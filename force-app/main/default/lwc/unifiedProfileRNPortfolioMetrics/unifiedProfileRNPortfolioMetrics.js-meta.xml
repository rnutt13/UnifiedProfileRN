<?xml version="1.0"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<apiVersion>57.0</apiVersion>
	<isExposed>true</isExposed>
	<masterLabel>unifiedProfileRNPortfolioMetrics</masterLabel>
	<targets>
		<target>lightning__AppPage</target>
		<target>lightning__HomePage</target>
		<target>lightning__RecordPage</target>
	</targets>

	<targetConfigs>
		<targetConfig targets="lightning__RecordPage">
			<!-- Content Properties -->
			<property name="headerTitle" type="String" default="Portfolio Metrics" label="Header Title" description="Main title for the portfolio metrics component"/>
			<property name="title1" type="String" default="Customer Value" label="Metric 1 Title" description="Title for the first metric"/>
			<property name="Subtitle1" type="String" default="€2,500" label="Metric 1 Value" description="Value for the first metric"/>
			<property name="title2" type="String" default="Repayments Made" label="Metric 2 Title" description="Title for the second metric"/>
			<property name="Subtitle2" type="String" default="12" label="Metric 2 Value" description="Value for the second metric"/>
			<property name="title3" type="String" default="Engagements" label="Metric 3 Title" description="Title for the third metric"/>
			<property name="Subtitle3" type="String" default="25" label="Metric 3 Value" description="Value for the third metric"/>
			
			<!-- Theme Properties -->
			<property name="darkMode" type="Boolean" default="false" label="Dark Mode" description="Toggle between dark and light theme"/>
		</targetConfig>
		<targetConfig targets="lightning__AppPage,lightning__HomePage">
			<!-- Content Properties -->
			<property name="headerTitle" type="String" default="Portfolio Metrics" label="Header Title" description="Main title for the portfolio metrics component"/>
